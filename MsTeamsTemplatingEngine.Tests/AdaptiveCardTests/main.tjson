{
	"type": "AdaptiveCard",
	"body": [
		{
			"type": "TextBlock",
			"size": "Medium",
			"weight": "Bolder",
			"text": "This is the preview of your question"
		},
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"items": [
						{
							"type": "Image",
							"style": "Person",
							"url": "https://pbs.twimg.com/profile_images/3647943215/d7f12830b3c17a5a9e4afcc370e3a37e_400x400.jpeg",
							"size": "Small"
						}
					],
					"width": "auto"
				},
				{
					"type": "Column",
					"items": [
						{
							"type": "TextBlock",
							"weight": "Bolder",
							"text": {{ json asker.realName }},
							"wrap": true
						},
						{
							"type": "TextBlock",
							"spacing": "None",
							"text": {{ json asker.jobInfo}},
							"isSubtle": true,
							"wrap": true
						}
					],
					"width": "stretch"
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "A question",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Your question has been submitted",
			"wrap": true
		}
	],
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.2"
}